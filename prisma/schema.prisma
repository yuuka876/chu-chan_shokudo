generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model USER_TBL {
  userId        String           @id @default(uuid())
  userName      String
  isAdmin       Boolean          @default(false)
  lineUserName  String?
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  reservations  RESERVATION_TBL[]
}

model MENU_TBL {
  menuNo        String    @id // Format: yyyymmdd001
  menuName      String
  provideDate   DateTime
  isReserved    Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  reservations  RESERVATION_TBL[]

  @@index([provideDate])
}

model BUSENESS_CARENDER_TBL {
  date          DateTime  @id
  startTime     String    // Format: HH:MM
  endTime       String    // Format: HH:MM
  isHoliday     Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model RESERVATION_TBL {
  id              String    @id @default(uuid())
  menuNo          String    
  userId          String
  reservationTime String    // 予約時間
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  user            USER_TBL  @relation(fields: [userId], references: [userId], onDelete: Cascade)
  menu            MENU_TBL  @relation(fields: [menuNo], references: [menuNo], onDelete: Cascade)
  
  @@index([userId])
  @@index([menuNo])
}
